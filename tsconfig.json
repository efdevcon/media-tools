{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.spec.ts"]
}
